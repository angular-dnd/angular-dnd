{
  "name": "angular-dnd",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/angular-dnd/angular-dnd.git",
  "author": "Alexander Trakhimenok <alex@sneat.co>",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "compodoc-core": "cd packages/core && npx compodoc -p tsconfig.lib.json -d ../../packages/examples/firebase-hosting/docs/core",
    "compodoc-tree": "cd packages/tree && npx compodoc -p tsconfig.lib.json -d ../../packages/examples/firebase-hosting/docs/tree",
    "version": "lerna version",
    "build:dev": "ng build core && ng build sortable && ng build tree && ng build multi-backend",
    "build:prod": "ng build core --prod && ng build sortable --prod && ng build tree --prod && ng build multi-backend --prod",
    "publish:core": "npm publish dist/core --access public",
    "publish:tree": "npm publish dist/tree --access public",
    "publish:sortable": "npm publish dist/sortable --access public",
    "publish:multi-backend": "npm publish dist/multi-backend --access public",
    "publish:all": "npm run version && npm run build:prod && npm run publish:core && npm run publish:tree && npm run publish:multi-backend"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@angular/common": "~10.0.1",
    "@angular/compiler": "~10.0.1",
    "@angular/core": "~10.0.1",
    "@angular/forms": "~10.0.1",
    "@angular/platform-browser": "~10.0.1",
    "@angular/platform-browser-dynamic": "~10.0.1",
    "@angular/router": "~10.0.1",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3",
    "dnd-core": "^10.0.2",
    "@sneat-dnd/multi-backend": "^0.0.10",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dnd-touch-backend": "^10.0.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.0",
    "@angular-devkit/build-ng-packagr": "~0.1000.0",
    "@angular/cli": "~10.0.0",
    "@angular/compiler-cli": "~10.0.1",
    "@angular/language-service": "~10.0.1",
    "@compodoc/compodoc": "^1.1.11",
    "@sneat-dnd/core": "^0.0.10",
    "@sneat-dnd/tree": "^0.0.10",
    "@types/jasmine": "3.10.0",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "14.0.4",
    "codelyzer": "^5.2.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~3.3.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "lerna": "^3.22.1",
    "ng-packagr": "^10.0.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.10.2",
    "tslint": "~6.1.2",
    "typescript": "~3.9.5"
  }
}
