{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/sortable",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": ["node", "zone.js"],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
  },
  "references": [
    {
      "path": "../core/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
